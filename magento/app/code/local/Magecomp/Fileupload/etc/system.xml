<?xml version="1.0"?>
<config>
	<tabs>
        <magecomp translate="label">
            <label><![CDATA[<img src="http://www.magecomp.com/media/images/magecomp--extension.png" alt="MAGECOMP" height="15" style="vertical-align:middle;"/>]]></label>
            <sort_order>50</sort_order>
        </magecomp>
    </tabs>
	<sections>
        <fileupload translate="label" module="fileupload">
            <label>File Upload</label>
            <tab>magecomp</tab>
            <frontend_type>text</frontend_type>
            <sort_order>124</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>        
				<general module="fileupload">
					<label>General Configuration</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
						<show_counter translate="label">
                            <label>Show Downloads Counter</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </show_counter>
						<login_before_download translate="label">
                            <label>User must be login before downloading this file?</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
						</login_before_download>
					</fields>
				</general>
				<fileupload module="fileupload">
					<label>Product Detail Page Configuration</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>16</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
						<enabled translate="label">
                            <label>Enable File Upload</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
						<product_attachment_heading translate="label">
                        	<label>File Upload Frontend Label</label>
                        	<frontend_type>text</frontend_type>
                        	<sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </product_attachment_heading>
						<showcontent translate="label">
                            <label>Show Description with Attachments ?</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </showcontent>
					</fields>
				</fileupload>
				<cmspagesattachments>
					<label>CMS Page Configuration</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>17</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
						<enabled translate="label">
                            <label>Enable CMS Attachments</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
						<cms_page_attachment_heading translate="label">
                        	<label>CMS Page Frontend Label</label>
                        	<frontend_type>text</frontend_type>
                        	<sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </cms_page_attachment_heading>	
						<showcontent translate="label">
                            <label>Show Description with Attachments?</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </showcontent>
					</fields>
				</cmspagesattachments>
            </groups>
        </fileupload>
    </sections>
</config>